{
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "printWidth": 100,
        "tabWidth": 4,
        "useTabs": false,
        "singleQuote": false,
        "bracketSpacing": true,
        "explicitTypes": "preserve"
      }
    },
    {
      "files": ["*.js", "*.ts", "*.tsx"],
      "options": {
        "printWidth": 80,
        "tabWidth": 2,
        "semi": false,
        "useTabs": false,
        "singleQuote": false,
        "bracketSpacing": true,
        "explicitTypes": "preserve"
      }
    }
  ],
  "tailwindFunctions": ["tw"]
}
